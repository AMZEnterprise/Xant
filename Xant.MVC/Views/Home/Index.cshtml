@{
    ViewData["Title"] = "صفحه اصلی";
}

<!-- ***** Welcome Area Start ***** -->
<section id="home" class="section welcome-area bg-overlay overflow-hidden d-flex align-items-center">
    <div class="container">
        <div class="row align-items-center">
            <!-- Welcome Intro Start -->
            <div class="col-12 col-md-7">
                <div class="welcome-intro">
                    <h1 class="text-white"><span class="fw-4">طراحی وبسایت و اپلیکیشن های خود را به</span> ژانت <span class="fw-4">بسپر. </span></h1>
                    <p class="text-white-50 my-4">
                        سلام دوست من ! به وبسایت طراحی وب ما خوش اومدی ، اینجا میتونی انواع پروژه های مخلتف طراحی وبسایت و اپلیکیشن اختصاصی و شیک را با بهترین قیمت و طراحی ظاهری سفارش بدی !
                    </p>
                    <!-- Buttons -->
                    <div class="button-group">
                        <a asp-fragment="contact" class="btn btn-bordered-white active">سفارش پروژه</a>
                        <a asp-controller="ContactUs" asp-action="Index" class="btn btn-bordered-white d-none d-sm-inline-block">تماس با ما</a>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-5">
                <!-- Welcome Thumb -->
                <div class="welcome-thumb-wrapper mt-5 mt-md-0">
                    <span class="welcome-thumb-1">
                        <img class="d-block mr-auto" src="~/img/welcome/thumb_11.png" alt="">
                    </span>
                    <span class="welcome-thumb-2">
                        <img class="welcome-animation d-block" src="~/img/welcome/thumb_12.png" alt="">
                    </span>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ***** Welcome Area End ***** -->

